.qrcode {
  width: 720px;
  img {
    width: 100%;
    height: 100%;
  }
}

.wrapper {
  display: block;
  position: relative;
  height: 238px;
  padding-right: calc(720px + 3em);

    .copyright {
      height: 220px;
    }

    .qrcode {
      position:absolute;
      top: 0;
      right: 2em;
    }

    @media (max-width: 1480px) {
      height: auto;
      padding-right: 0;
      text-align: center;

      .copyright {
        text-align: left;
        width: 691px;
        height: auto;
        margin: 0 auto;
      }
      .qrcode {
        position: static;
        margin: 0 auto;
        margin-top: 1em;
      }
    }

    @media (max-width: 1200px) {
      .qrcode, .copyright {
        width: calc(100% - 140px);
      }
    }
}

